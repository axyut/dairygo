package pages

import "github.com/axyut/dairygo/client/components"

templ Login() {
	<div class="formPage"  hx-ext="response-targets">
		<h1>
			Sign in to your account
		</h1>
        
		<form
			class="formContainer"
			hx-post="/login"
			hx-target="#login_success"
			hx-target-error="#error"
			hx-swap="afterbegin"
		>
		<div id="login_success"></div>
			<div>
				// <label for="email">Your email or Username</label>
				<input
					type="text"
					name="email_username"
					id="email"
					placeholder="email OR username"
					required=""
					autocomplete="email"
					class="simpleInput"
				/>
			</div>
			<div>
				// <label for="password">Password</label>
				<input
					type="password"
					name="password"
					id="password"
					placeholder="password"
					required=""
					class="simpleInput"
					autocomplete="current-password"
				/>
			</div>
			<button class="simpleButton" type="submit" >
				Log in
			</button>
			<p>
				Donâ€™t have an account yet?
				<a href="/register">Register</a>
			</p>
		</form>
	</div>
}

templ LoginError(msg string) {
	// <p>Login Error! {msg}</p>
    @components.DangerToast("Login Error!" + msg)
}	